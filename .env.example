# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# GOOGLE MAPS (Railway Proxy)
# ============================================
# Get from: https://console.cloud.google.com
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
ALLOWED_ORIGINS=http://localhost:*,https://i-love-miami.netlify.app
NODE_ENV=production
PORT=3001

# Rate limiting for API proxy
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# SUPABASE (Database)
# ============================================
# Get from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# STRIPE (Payments)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# TELEGRAM (Bot API)
# ============================================
# Create bot via @BotFather on Telegram, copy token here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Generate a random string for webhook verification
TELEGRAM_WEBHOOK_SECRET=your_random_webhook_secret_here

# Get this by:
# 1. Message your bot on Telegram
# 2. Call: https://api.telegram.org/bot{TOKEN}/getUpdates
# 3. Look for "chat":{"id":123456789} in the response
ADMIN_TELEGRAM_CHAT_ID=your_admin_chat_id_here

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=LuxeRide Airport Transfer
APP_URL=https://i-love-miami.netlify.app
SUPPORT_EMAIL=support@luxeride.com
SUPPORT_PHONE=+13057654321

# ============================================
# DEPLOYMENT URLS
# ============================================
# Railway API Proxy
RAILWAY_API_URL=https://reliable-warmth-production-d382.up.railway.app

# Netlify Functions
NETLIFY_FUNCTIONS_URL=https://i-love-miami.netlify.app/.netlify/functions